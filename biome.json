{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 4
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always"
		},
		"globals": ["zwTTVGPT", "wp", "tinyMCE", "jQuery", "_"]
	},
	"css": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 4
		}
	},
	"files": {
		"includes": [
			"**/assets/**/*.js",
			"**/assets/**/*.css",
			"!**/vendor/**",
			"!**/node_modules/**"
		]
	}
}
